<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateFragment">

    <EditText
        android:id="@+id/updatename"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/updateusername"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="UserName"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/updatename"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/updateemail"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@+id/updateusername"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/updatephone"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Phone"
        android:inputType="phone"
        app:layout_constraintTop_toBottomOf="@+id/updateemail"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/updatevehiclenumber"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="VehicleNumber"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/updatephone"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/driverUpdate"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="152dp"
        android:backgroundTint="@color/yellow"
        android:text="@string/driverUpdate"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/updatevehiclenumber"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>